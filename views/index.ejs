<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Nest & EJS ❤</title>

    <!-- CSS (load bootstrap from a CDN) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      body {
        padding-top: 50px;
      }
      .container {
        display: flex;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 50px;
      }
      .proxyBox {
        display: flex;
        gap: 16px;
      }
    </style>
  </head>
  <body class="container">
    <div>
      <h1>Курьер</h1>
      <h2>Всего записей: <%= countCourier %></h2>
      <main>
        <form method="POST" action="/saveUrlCourier">
          <label for="url">URL запроса:</label><br />
          <input type="text" name="url" style="width: 600px;" value="<%= urlCourier || '' %>" /><br /><br />
          <button type="submit">Сохранить</button>
        </form>
        <br>
        <form method="POST" action="/submitCourier">
          <textarea style="width: 600px;" name="text" rows="5" cols="40"></textarea>
          <br />
          <button type="submit">Отправить</button>
        </form>
    </div>
    <div class="proxyBox">
      <div>
      <h1>Прокси Гриша</h1>
      <main>
        <form method="POST" action="/submitProxy">
          <textarea style="width: 600px;" name="proxy" rows="5" cols="40"></textarea>
          <br />
          <button type="submit">Добавить</button>
        </form>
        <h3>Список прокси:</h3>

        <% if (allProxy && allProxy.length > 0) { %>
          <ul>
            <% allProxy.forEach(proxy => { %>
              <li>
                <p><%= proxy.proxy %></p>
                <form method="POST" action="/deleteProxy">
                  <input type="hidden" name="idProxy" value="<%= proxy.id %>" />
                  <button type="submit">Удалить</button>
                </form>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>Прокси пока нет</p>
        <% } %>
    </div>
    <div>
      <h1>Прокси Макс</h1>
      <main>
        <form method="POST" action="/submitProxyMaks">
          <textarea style="width: 600px;" name="proxyMaks" rows="5" cols="40"></textarea>
          <br />
          <button type="submit">Добавить</button>
        </form>
        <h3>Список прокси:</h3>

        <% if (allProxyMaks && allProxyMaks.length > 0) { %>
          <ul>
            <% allProxyMaks.forEach(proxy => { %>
              <li>
                <p><%= proxy.proxy %></p>
                <form method="POST" action="/deleteProxyMaks">
                  <input type="hidden" name="idProxyMaks" value="<%= proxy.id %>" />
                  <button type="submit">Удалить</button>
                </form>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>Прокси пока нет</p>
        <% } %>
    </div>
    </div>
    
    </main>
  </body>
</html>
